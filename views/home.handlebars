      <div class="container">
        <div class="text-center my-3">
            <img class="img-fluid" src="assets/favicon.png">
            <h1>SchoolElo</h1>
            <h4>Crowdsourced College Rankings</h4>
            <button type="button" class="btn btn-red" data-toggle="modal" data-target="#exampleModalCenter">
  New Match
</button>
        </div>

        <div id="table" class="my-5">
            <div class="text-right">Rankings refresh every 5 minutes</div>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Rank</th>
                    <th scope="col">Name</th>
                    <th scope="col">Elo</th>
                    <th scope="col">Chart</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each school}}
                        <tr>
                        <th scope="row">{{this.rank}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.elo}}</td>
                        <td>
                            <svg viewBox="0 0 100 50" class="chart">
                                <polyline
                                    fill="none"
                                    stroke="#242124"
                                    stroke-width="3"
                                    stroke-linejoin="round"
                                    points={{{this.history}}}
                                />
                            </svg>
                        </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>


